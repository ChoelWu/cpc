<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.joe.dao.AdminAuthMapper">
    <resultMap id="menuNameResultMap" type="com.joe.pojo.Auth">
        <id column="auth_id" property="authId"/>
        <result column="auth_no" property="authNo"/>
        <result column="auth_name" property="authName"/>
        <result column="auth_permission" property="authPermission"/>
        <result column="menu_no" property="menuNo"/>
        <result column="menu_name" property="menuName"/>
        <result column="bak" property="bak"/>
        <result column="add_time" property="addTime"/>
        <result column="add_user_no" property="addUserNo"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_user_no" property="updateUserNo"/>
    </resultMap>

    <select id="countAuth" resultType="java.lang.Integer" parameterType="java.util.Map">
        SELECT COUNT(*)
        FROM cpc_admin_auth caa LEFT JOIN cpc_admin_menu cam ON caa.menu_no = cam.menu_no
        <where>
            1=1
            <if test="authName != null and authName != ''">
                AND caa.auth_name like concat("%", #{authName}, "%")
            </if>
            <if test="menuNo != null and menuNo != ''">
                AND caa.menu_no = #{menuNo}
            </if>
        </where>
    </select>

    <select id="listAuth" resultMap="menuNameResultMap" parameterType="java.util.Map">
        SELECT
        caa.auth_id,
        caa.auth_no,
        caa.auth_name,
        caa.auth_permission,
        caa.menu_no,
        caa.bak,
        caa.add_time,
        caa.add_user_no,
        caa.update_time,
        caa.update_user_no,
        cam.menu_name
        FROM cpc_admin_auth caa LEFT JOIN cpc_admin_menu cam ON caa.menu_no = cam.menu_no
        <where>
            1=1
            <if test="authName != null and authName != ''">
                AND caa.auth_name like concat("%", #{authName}, "%")
            </if>
            <if test="menuNo != null and menuNo != ''">
                AND caa.menu_no = #{menuNo}
            </if>
        </where>
        ORDER BY caa.menu_no ASC
        LIMIT #{startRow}, #{rowNum}
    </select>
</mapper>
